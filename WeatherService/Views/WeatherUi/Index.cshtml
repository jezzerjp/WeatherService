@model WeatherService.Models.WeatherData

<div class="jumbotron">
    <h1>Weather Finder Application</h1>
    <p>Find the average weather from several providers.</p>
</div>
<div class="container">

        @using (Html.BeginForm("Index", "WeatherUi", FormMethod.Post))
        {
            <div class="form-horizontal">
                <div class="col-md-6">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(m => m.Location, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(m => m.Location, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.TemperatureUnits, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(m => m.TemperatureUnits,
                        new List<SelectListItem>{
                            new SelectListItem {Value="Celsius", Text="Celsius"},
                            new SelectListItem {Value="Fahrenheit", Text="Fahrenheit"}
                        },
                        new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">           
                        @Html.LabelFor(m => m.WindSpeedUnits, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                        @Html.DropDownListFor(m => m.WindSpeedUnits,
                        new List<SelectListItem>{
                            new SelectListItem {Value="Kph", Text="Kph"},
                            new SelectListItem {Value="Mph", Text="Mph"}
                        },
                        new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="col-md-12">
                        <input type="submit" class="btn btn-default" value="Submit" />
                    </div>

                    <div class="col-md-12">
                        <span class="text-danger">@ViewBag.ErrorDescription</span>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.AverageTemperature, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                        @Html.TextBoxFor(m => m.AverageTemperature, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.AverageWindSpeed, new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                        @Html.TextBoxFor(m => m.AverageWindSpeed, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
            </div>
        }

</div>